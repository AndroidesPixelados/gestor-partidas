<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/contenidoDerecho" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vista de los personajes" />
    
    <TextView
        android:id="@+id/pepe" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/botonCargarPersonajes"
        style="@style/menuInicial.boton"
        android:text="Cargar Personaje" />
    
    <Button
        android:id="@+id/botonMostrarPepe"
        style="@style/menuInicial.boton"
        android:text="Mostrar Pepe" />
    
    <ListView 
        android:id="@+id/listaPersonajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />    
    

</LinearLayout>